<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="userDAO">

	<insert id="createUser">
		INSERT INTO MEMBER(ID,ROLE,PASSWORD,EMAIL,IMAGE,NAME,POST,ADDRESS)
		VALUES(#{id},#{role},#{password},#{email},#{image},#{name},#{post},#{address})
	</insert>

	<select id="getUser" resultType="user">
		SELECT * FROM MEMBER WHERE ID =	#{id}
	</select>

	<update id="changePassword">
		UPDATE MEMBER SET PASSWORD= #{password} WHERE ID= #{id}
	</update>

	<select id="find_id" resultType="user">
		SELECT * FROM MEMBER WHERE EMAIL = #{email}
	</select>

	<select id="find_password" resultType="user">
		SELECT * FROM MEMBER WHERE id=#{id} and email=#{email}
	</select>
</mapper>
