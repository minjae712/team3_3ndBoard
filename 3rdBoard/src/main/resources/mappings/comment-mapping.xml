<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CommentDAO">

	<insert id="insertComment">	
		INSERT INTO BOARD_COMMENT(COMMENT_NO,NO,WRITER,CONTENT)
		VALUES((SELECT NVL(MAX(NO), 0) + 1 FROM BOARD_COMMENT),#{no},#{writer},#{content})
	</insert>
	
	<select id="getCommentList" resultType="Comment">
	<![CDATA[
	SELECT * FROM BOARD_COMMENT WHERE NO = #{no}
	]]>
	</select>
	
	<select id="getComment" resultType="Comment">
		SELECT * FROM BOARD_COMMENT WHERE NO = #{no} AND #{commentNo}
	</select>

	<update id="updateComment">
		UPDATE BOARD_COMMENT SET CONTENT=#{content} WHERE NO = #{no} AND COMMENT_NO = #{commentNo}
	</update>

	<delete id="deleteBoard">
		DELETE FROM BOARD_COMMENT WHERE NO = #{no} AND COMMENT_NO = #{commentNo}
	</delete>
	
	<resultMap id="CommentResult" type="Comment">
		<id property="no" column="NO" />
		<result property="writer" column="WRITER" />
		<result property="role" column="ROLE" />
		<result property="content" column="CONTENT" />
		<result property="regDate" column="REGDATE" />
	</resultMap>

</mapper>